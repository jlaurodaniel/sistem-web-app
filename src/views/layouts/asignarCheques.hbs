<div class=" bg-secondary text-center text-white mb-4">
    <p class="h5 w-100">Asignar Recursos</p>
</div>
<form action="/cheques/asignar/{{IdRecurso}}" class="container bg-rgba-dark  mt-3 text-white" method="post">
    <div class="row bg-primary">
        <div class="col-md-9 h-5  text-center text-white">
            Recurso Folio/Referencia: {{FolioReferencia}}
        </div>
        <div class="col-md-1 h-5 bg-dark text-center text-white">
            Id: {{IdRecurso}}
        </div>
        <div class="col-md-2 h-5  bg-danger  text-center text-white">
            Monto:{{FMoney MontoTotal}}
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-4">
            <label class="form-label">Tipo de asignacion</label>
            <select required name="IdInputTipoAsignacion" id="IdInputTipoAsignacion" class="dropdown-menu-dark form-select">
                <option hidden value="0">Selecciona un tipo de asignacion</option>
                {{#each TipoAsignacion}}
                <option value="{{IdTipoAsignacion}}">
                    {{TipoAsignacion}}
                </option>
                {{/each }}
            </select>
        </div>
        <div class="col-md-4" id="colObra">
            <label class="form-label">Selecciona una obra</label>
            <select required data-live-search="true" name="IdObra" id="IdInputObra" class="dropdown-menu-dark form-select">
                <option  hidden value="0">Selecciona una obra</option>
                {{#each Obras}}
                <option value="{{IdObra}}">
                    {{AliasNombreObra}}
                </option>
                {{/each }}
            </select>
        </div>
        <!--
        <div class="col-md-4" id="colDepto">
            <label class="form-label">Selecciona un departamento</label>
