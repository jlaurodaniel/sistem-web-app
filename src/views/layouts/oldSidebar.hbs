<div class="container-fluid">
        <div class="row flex-nowrap">
            {{#unless OnIndex}}
            <div class="col-auto col-md-3 col-xl-2 px-sm-3 bg-dark">
                <div class=" w-100 d-flex flex-column align-items-center align-items-sm-start  pt-2 min-vh-100">
                    <ul class="w-100 nav nav-pills flex-column mb-sm-auto align-items-start align-items-sm-start "
                        id="menu">
                        <li class="my-1 w-100 hover-items ">
                            <a href="/Dashboard" class="nav-link align-middle px-0">
                                <span class="btn btn-info">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span class="ms-1 d-none d-sm-inline text-white">Menu</span>
                            </a>
                        </li>
                        {{#if (authForRecursos IdCargo)}}
                        <li class="my-1  w-100 hover-items ">
                            <a href="/cheques" class="nav-link align-middle px-0">
                                <span class="btn btn-info">
                                    <i class="fas fa-money-check-alt"></i>
                                </span>
                                <span class="ms-1 d-none d-sm-inline text-white">Recusos</span>
                            </a>
                        </li>
                        {{/if}}
                        <li class="my-1  w-100 hover-items">
                            <a href="/comprobacionDeGastos" class="nav-link px-0 align-middle">
                                <span class="btn btn-info">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                </span>
                                <span class="ms-1 d-none d-sm-inline text-white">Comprobaciones</span></a>
                        </li>
                        {{#if (authForAddUsers IdCargo)}}
                        <li class="my-1 w-100 hover-items">
                            <a href="/auth/signUp" class="nav-link px-0 align-middle">
                                <span class="btn btn-info">
                                    <i class="fas fa-user-plus"></i>
                                </span>
                                <span class="ms-1 d-none d-sm-inline text-white">Añadir usuarios</span></a>
                        </li>
                        {{/if}}
                        <div class="dropdown pb-4 mt-5">
                            <a href="#"
                                class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                                id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle fa-2x"></i>
                                <span class="d-none d-sm-inline mx-1">Perfil</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                                <li><a class="dropdown-item" href="/auth/updateProfile">Cambiar contraseña</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/auth/logout">Sign out</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
            {{/unless}}
            <div class="{{#if OnIndex}}col-auto col-md-12 col-xl-12{{else}}col-auto col-md-9 col-xl-10{{/if}} p-0">
                <div class="">
                    {{>messages}}
                    {{{body}}}
                </div>
                <footer class="mt-5 text-white text-center text-lg-start" style="background-color: #23242a;">
