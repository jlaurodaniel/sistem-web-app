<div class="container mt-4 ">
    <div class="container-fluid p-0">
        <div class="container p-3 bg-dark-blue">
            <div class="row  m-0 text-white">
                <div class="col-md-2 my-3">
                    <div class="w-50 bg-dark d-inline p-2 ">
                        Folio:
                    </div>
                    <div class="w-50 bg-secondary d-inline p-2">
                        {{Reasignacion.IdReasignacion}}
                    </div>
                </div>
                <div class="col-md-4 my-3">
                    <div class="w-50 bg-dark w-100 d-lg-inline d-md-block d-sm-block p-2 ">
                        Fecha:
                    </div>
                    <div class="w-50 bg-secondary w-100 d-lg-inline d-md-block d-sm-block p-2">
                        {{FormatDate Reasignacion.FECHA}}
                    </div>
                </div>
                <div class="col-md-6 my-3">
                    <div class="w-50 bg-dark w-100 d-lg-inline d-md-block d-sm-block p-2 ">
                        Usuario que comprueba:
                    </div>
                    <div class="w-50 bg-secondary w-100 d-lg-inline d-md-block d-sm-block p-2">
                        {{Reasignacion.NombreRecibe}}-{{AsignacionPresupuesto.ApellidoRecibe}}
                    </div>
                </div>
            </div>
            <div class="row p-2 m-0 text-white">
                <div class="col-md-4 my-3">
                    <div class="w-50 bg-dark w-100 d-lg-inline d-md-block d-sm-block p-2 ">
                        Monto Asignado:
                    </div>
                    <div class="w-50 bg-secondary w-100 d-lg-inline d-md-block d-sm-block p-2">
                        {{FMoney Reasignacion.MontoAsignado}}
                    </div>
                </div>
                <div class="col-md-6 my-3">
                    <div class="w-50 bg-dark w-100 d-lg-inline d-md-block d-sm-block p-2 ">
                        Asignado Por:
                    </div>
                    <div class="w-50 bg-secondary w-100 d-lg-inline d-md-block d-sm-block p-2">
                        {{Reasignacion.NombreAsigna}}-{{Reasignacion.ApellidoAsigna}}
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-dark p-0 " id="table">
            <table id="table_allDetail" class="table table-dark table-striped nowrap">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Concepto</th>
                        <th>Rubro</th>
                        <th>Fecha</th>
                        <th>Folio/Referencia</th>
                        <th>Contribuyente</th>
                        <th>Importe</th>
                        <th>Iva</th>
                    </tr>
                </thead>
                <tbody class="">
                    <!-------
                                        {{#each comprobaciones}}
                                        <tr class="">
                                            <td>{{Nombre}} {{PrimerApellido}}</td>
                                            <td>{{Concepto}}</td>
                                            <td> {{Rubro}}</td>
                                            <td>{{ShortFormatDate Fecha}}</td>
                                            <td>{{FolioNotaFactura}}</td>
                                            <td> {{Contribuyente}}</td>
                                            <td>{{FMoney Monto}}</td>
                                            <td>{{GetIva Monto}}</td>
                                        </tr>
                                        {{/each }}
                                        !----->
                </tbody>
            </table>
            <div class="row justify-content-end px-4">
                <div class="col-md-1 p-1 btn-secondary text-center">
                    Suma:
                </div>
                <div class="col-md-2 p-1 btn-danger text-center">
                </div>
            </div>
            <div class=" mt-3 text-white  row align-items-start">
                <div class="col-md-6 px-auto">
                    <div class=" border border-white text-center py-2">
                        <p class="">Estatus de la comprobacion:</p>
                        <div class="badge bg-warning text-dark ">
                            {{AsignacionPresupuesto.StatusAsignacionPresupuesto}}
                        </div>
                    </div>
                </div>
                <div class="col-md-6  text-center ">
                    <div class=" border border-white p-4">
                        <table class="table table-dark table-bordered  table-striped ">
                            <thead>
                                <tr>
                                    <th colspan="2" class="table-active">Detalles total de la comprobacion</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Fecha de Reasignacion</td>
                                    <td>{{FormatDate Reasignacion.FECHA}}</td>
                                </tr>
                                <tr>
                                    <td>Monto Asignado</td>
                                    <td>{{FMoney Reasignacion.MontoAsignado}}</td>
                                </tr>
                                <tr>
                                    <td>Caja Chica</td>
                                    <td>{{FMoney Reasignacion.CajaChica}}</td>
                                </tr>
                                <tr>
                                    <td>Observaciones</td>
                                    <td>{{Reasignacion.Observacion}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>